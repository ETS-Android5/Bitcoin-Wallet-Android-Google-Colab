<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ToggleableCurrencyButton">
        <attr name="fiatOnly" format="boolean"/>
        <attr name="hideOnNoExchangeRate" format="boolean"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="precision" format="integer"/>
    </declare-styleable>

    <declare-styleable name = "ViewPagerIndicator">
        <attr name = "itemWidth" format = "dimension"/>
        <attr name = "itemHeight" format = "dimension"/>
        <attr name = "delimiterSize" format = "dimension"/>
        <attr name = "itemIcon" format = "reference"/>
        <attr name = "itemIconSelected" format = "reference"/>
    </declare-styleable>

    <declare-styleable name="RoundButton">
        <attr name="backgroundColor" />
    </declare-styleable>

    <declare-styleable name="RoundButtonWithText" >
        <attr name="backgroundColor" />
        <attr name="text" format="string|reference" />
        <attr name="icon" />
    </declare-styleable>

    <declare-styleable name="OtpViewTheme">
        <attr format="reference" name="otpViewStyle"/>
    </declare-styleable>

    <declare-styleable name="OtpView">
        <attr format="integer" name="itemCount"/>
        <attr format="dimension" name="itemsWidth"/>
        <attr format="dimension" name="itemsHeight"/>
        <attr format="dimension" name="itemRadius"/>
        <attr format="dimension" name="itemSpacing"/>
        <attr format="dimension" name="lineWidth"/>
        <attr format="reference|color" name="lineColor"/>
        <attr format="enum" name="viewType">
            <enum name="rectangle" value="0"/>
            <enum name="line" value="1"/>
            <enum name="none" value="2"/>
        </attr>
        <attr name="android:cursorVisible"/>
        <attr format="dimension" name="cursorWidth"/>
        <attr format="reference|color" name="cursorColor"/>
        <attr name="android:itemBackground"/>
        <attr format="boolean" name="hideLineWhenFilled"/>
        <attr format="boolean" name="state_filled"/>
        <attr format="boolean" name="rtlTextDirection"/>
        <attr format="string" name="maskingChar"/>
    </declare-styleable>
</resources>