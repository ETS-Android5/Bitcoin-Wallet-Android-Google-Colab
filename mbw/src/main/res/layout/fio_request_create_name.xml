<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.mycelium.wapi.wallet.coins.Value" />

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.mycelium.wallet.activity.fio.requests.viewmodels.FioRequestCreateViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/page_margin_width"
        android:paddingEnd="@dimen/page_margin_width">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:textColor="@color/fio_white_alpha_0_6"
                android:textSize="14sp"
                android:text="From:" />

            <TextView
                android:id="@+id/tvPayeeFio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/arrow_bottom"
                android:drawablePadding="16dp"
                android:text="@{viewModel.payeeFioName}"
                android:textSize="18sp"
                tools:text="newAddress@domain" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:textColor="@color/fio_white_alpha_0_6"
                android:textSize="14sp"
                android:text="Receiving account:" />

            <TextView
                android:id="@+id/tvReceivingAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:text="@{viewModel.payeeAccount.label}"
                android:textColor="@color/fio_green"
                tools:text="newAddress@domain" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/fio_white_alpha_0_6"
            android:textSize="14sp"
            android:text="Send request to: " />

        <TextView
            android:id="@+id/tvPayerFioAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:drawableRight="@drawable/ic_edit_fio_name"
            android:drawablePadding="16dp"
            android:text="@{viewModel.payerFioName}"
            android:textSize="18sp"
            tools:text="newAddress@domain" />

        <!--Contains amount selection-->

        <TextView
            android:id="@+id/tvAmountLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/amount_label"
            android:textColor="@color/fio_white_alpha_0_6"
            android:textSize="14sp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">
            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@{viewModel.requestedAmountFormatted.isEmpty() ? viewModel.amountHint : null}"
                android:text="@{viewModel.requestedAmountFormatted}"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textColorHint="@color/darkgrey"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_mono_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="0.00123305 tBTC" />

            <TextView
                android:id="@+id/tvAmountFiat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{viewModel.requestedAmountAlternativeFormatted}"
                android:textAlignment="textEnd"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_mono_regular"
                android:visibility="@{viewModel.requestedAmountAlternativeFormatted.isEmpty() ? View.GONE : View.VISIBLE}"
                app:layout_constraintEnd_toEndOf="@id/tvAmount"
                app:layout_constraintTop_toBottomOf="@id/tvAmount"
                tools:text="55.02 USD" />

            <ImageButton
                android:id="@+id/btEnterAmount"
                style="@style/MyceliumSlimButton"
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:clickable="false"
                android:contentDescription="@string/enter_amount_title"
                android:scaleType="fitCenter"
                android:src="@drawable/keyboard_icon"
                app:layout_constraintStart_toEndOf="@id/tvAmount"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:textColor="@color/fio_white_alpha_0_6"
                android:textSize="14sp"
                android:text="Miner fee:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="Free (bundle transaction)"
                android:textSize="14sp" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fio_white_alpha_0_6"
            android:textSize="14sp"
            android:text="Memo:" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-4dp"
            android:layout_marginEnd="-4dp"
            android:textSize="14sp"
            android:hint="Leave a message for boss@domain"
            android:text="@={viewModel.fioMemo}"/>

        <View
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btNextButton"
            style="@style/FioNameRegistrationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="220dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="60dp"
            android:textSize="20sp"
            android:enabled="@{viewModel.amount.moreThanZero()}"
            android:text="Send FIO request"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>
</layout>