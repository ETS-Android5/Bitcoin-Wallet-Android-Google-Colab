<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.mycelium.bequant.signup.viewmodel.SignUpViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:hintEnabled="false"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_bequant_input_text"
                android:fontFamily="@font/exo2medium"
                android:hint="@string/email"
                android:padding="8dp"
                android:text="@={viewModel.email}"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:hintEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/emailLayout"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_bequant_input_text"
                android:fontFamily="@font/exo2medium"
                android:hint="@string/set_password"
                android:inputType="textPassword"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@={viewModel.password}"
                android:textSize="16sp" />

            <ProgressBar
                android:id="@+id/passwordLevel"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="8dp"
                android:indeterminate="false"
                android:indeterminateOnly="false"
                android:max="90"
                android:progress="33"
                android:visibility="@{viewModel.passwordLevelVisibility}"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/passwordLevelLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/exo2medium"
                android:text="@{viewModel.passwordLevelText}"
                android:textSize="12sp"
                android:visibility="@{viewModel.passwordLevelVisibility}"
                tools:text="Weak" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/passwordNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/exo2medium"
            android:text="@string/at_least_6_characters"
            android:textColor="#49505C"
            android:textSize="12sp"
            android:visibility="@{viewModel.passwordNoteVisibility}"
            app:layout_constraintTop_toBottomOf="@id/passwordLayout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/repeatPasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:hintEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/passwordNote"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/repeatPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_bequant_input_text"
                android:fontFamily="@font/exo2medium"
                android:hint="@string/repeat_password"
                android:inputType="textPassword"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@={viewModel.repeatPassword}"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/counteySelector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_bequant_input_text"
            android:fontFamily="@font/exo2medium"
            android:hint="@string/residence_country"
            android:padding="8dp"
            android:textSize="16sp"
            app:drawableEndCompat="@drawable/ic_arrow_drop_down"
            app:layout_constraintTop_toBottomOf="@id/repeatPasswordLayout" />

        <TextView
            android:id="@+id/iHaveRefCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:drawableEnd="@drawable/ic_chevron_up"
            android:drawablePadding="8dp"
            android:fontFamily="@font/exo2medium"
            android:text="@string/i_have_a_referral_code"
            android:textColor="@color/bequant_yellow"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/counteySelector" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/referralLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            app:hintEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/iHaveRefCode"
            tools:visibility="visible">

            <EditText
                android:id="@+id/referralCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_bequant_input_text"
                android:fontFamily="@font/exo2medium"
                android:hint="@string/referral_code"
                android:padding="8dp"
                android:text="@={viewModel.referralCode}"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/termsOfUse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/exo2medium"
            android:gravity="center"
            android:text="@string/by_clicking_sign_up_you_agree_to_our_terms_of_use"
            app:layout_constraintTop_toBottomOf="@id/referralLayout" />

        <Button
            android:id="@+id/register"
            style="@style/Bequant.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/register"
            app:layout_constraintTop_toBottomOf="@id/termsOfUse" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toTopOf="@id/supportCenter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register" />

        <TextView
            android:id="@+id/supportCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/exo2medium"
            android:gravity="center"
            android:text="@string/support_center"
            android:textColor="@color/bequant_yellow"
            app:layout_constraintBottom_toTopOf="@id/buildVersion" />

        <TextView
            android:id="@+id/buildVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/exo2medium"
            android:gravity="center"
            android:text="@{viewModel.buildVersion}"
            android:textColor="#3C424B"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>