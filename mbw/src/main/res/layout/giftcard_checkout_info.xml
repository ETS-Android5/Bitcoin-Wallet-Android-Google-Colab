<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/fragment_giftbox_checkout">

    <data>

        <import type="com.mycelium.wallet.activity.util.ValueExtensionsKt" />

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.mycelium.giftbox.cardDetails.CardDetailsFragmentViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clReceivedRequestInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tvGiftCardAmountTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Gift card amount:"
                android:textColor="@color/fio_white_alpha_0_8"
                android:textSize="14sp"
                app:layout_constraintBaseline_toBaselineOf="@id/tvGiftCardAmount"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvGiftCardAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/ic_baseline_edit_24"
                android:fontFamily="sans-serif-medium"
                android:textSize="22sp"
                app:layout_constraintStart_toEndOf="@id/tvGiftCardAmountTitle"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="100 USD" />

            <TextView
                android:id="@+id/tvDiscountTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Discount:"
                android:textColor="@color/fio_white_alpha_0_8"
                android:textSize="14sp"
                app:layout_constraintBaseline_toBaselineOf="@id/tvDiscount"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@id/tvDiscountTitle"
                app:layout_constraintTop_toBottomOf="@id/tvGiftCardAmount"
                tools:text="10% discount for each" />


            <TextView
                android:id="@+id/tvExpireTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Expire date:"
                android:textColor="@color/fio_white_alpha_0_8"
                android:textSize="14sp"
                app:layout_constraintBaseline_toBaselineOf="@id/tvExpire"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvExpire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@id/tvExpireTitle"
                app:layout_constraintTop_toBottomOf="@id/tvDiscount"
                tools:text="Does not expire" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
</layout>