<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/giftbox"
    app:startDestination="@id/giftboxFragment">

    <fragment
        android:id="@+id/giftboxFragment"
        android:name="com.mycelium.giftbox.cards.GiftBoxFragment"
        android:label="Gift cards"
        tools:layout="@layout/fragment_gift_box">

        <action
            android:id="@+id/toCardDetailsFragment"
            app:destination="@id/giftBoxDetailsFragment" />
        <action
            android:id="@+id/actionSelectCountries"
            app:destination="@id/selectCountiesFragment" />
        <action
            android:id="@+id/actionDetails"
            app:destination="@id/giftBoxDetailsFragment" />
        <action
            android:id="@+id/actionProductInfo"
            app:destination="@id/productInfoFragment" />
    </fragment>

    <fragment
        android:id="@+id/cardBuyFragment"
        android:name="com.mycelium.giftbox.cardDetails.GiftboxBuyFragment"
        android:label="Buy gift card"
        tools:layout="@layout/fragment_giftbox_buy">

        <argument
            android:name="accountId"
            app:argType="java.util.UUID" />

        <argument
            android:name="product"
            app:argType="com.mycelium.giftbox.client.models.ProductInfo" />
        <action
            android:id="@+id/actionNext"
            app:destination="@id/selectAccountFragment2" />

        <action
            android:id="@+id/enterAmount"
            app:destination="@id/amountInputFragment" />
    </fragment>

    <fragment
        android:id="@+id/selectCountiesFragment"
        android:name="com.mycelium.giftbox.cards.SelectCountiesFragment"
        android:label="Select country"
        tools:layout="@layout/fragment_select_counties" />
    <fragment
        android:id="@+id/selectAccountFragment2"
        android:name="com.mycelium.giftbox.submit.SelectAccountFragment"
        android:label="Buy gift card"
        tools:layout="@layout/fragment_bequant_select_account">
        <argument
            android:name="productInfo"
            app:argType="com.mycelium.giftbox.client.models.ProductInfo" />

        <action
            android:id="@+id/actionBuy"
            app:destination="@id/cardBuyFragment" />
    </fragment>

    <fragment
        android:id="@+id/amountInputFragment"
        android:name="com.mycelium.giftbox.cardDetails.AmountInputFragment">
        <argument
            android:name="product"
            app:argType="com.mycelium.giftbox.client.models.ProductInfo" />

        <argument
            android:name="amount"
            app:argType="com.mycelium.wapi.wallet.coins.Value"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/productInfoFragment"
        android:name="com.mycelium.giftbox.productInfo.ProductInfoFragment"
        android:label="GiftBoxDetailsFragment"
        tools:layout="@layout/fragment_giftbox_product_info">
        <argument
            android:name="productInfo"
            app:argType="com.mycelium.giftbox.client.models.ProductInfo" />

        <action
            android:id="@+id/toSelectAccount"
            app:destination="@id/selectAccountFragment2" />

    </fragment>

    <fragment
        android:id="@+id/giftBoxDetailsFragment"
        android:name="com.mycelium.giftbox.details.GiftBoxDetailsFragment"
        android:label="GiftBoxDetailsFragment"
        tools:layout="@layout/fragment_giftbox_details">
        <argument
            android:name="order"
            app:argType="com.mycelium.giftbox.client.models.Order" />
        <argument
            android:name="mode"
            app:argType="com.mycelium.giftbox.details.MODE" />

        <action
            android:id="@+id/toBuyFragment"
            app:destination="@id/cardBuyFragment" />

    </fragment>

</navigation>